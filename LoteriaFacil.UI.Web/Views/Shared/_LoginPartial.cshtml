
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">

            <li class="nav-item d-none d-sm-inline-block">
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage"><i class="fa fa-user"></i> Olá, @UserManager.GetUserName(User)!</a>
            </li>

            <li class="nav-item d-none d-sm-inline-block">
                <button type="submit" class="btn btn-link navbar-btn navbar-link"><i class="fa fa-sign-out"></i>Sair</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item d-none d-sm-inline-block">
            <a asp-area="" asp-controller="Account" asp-action="Register" class="nav-link">Registrar-se</a>
        </li>

        <li class="nav-item d-none d-sm-inline-block">
            <a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link"><i class="fa fa-sign-in"></i> Entrar</a>
        </li>
    </ul>
}
