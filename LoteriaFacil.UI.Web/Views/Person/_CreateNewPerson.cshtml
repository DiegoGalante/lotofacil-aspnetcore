@model PersonViewModel

<div class="col-md-4 border-right">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Cadastro Jogadores</h3>
        </div>
        <div class="card-body">

            <form asp-action="Create" asp-controller="Person">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="card-body">

                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <div class="input-group">

                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <i class="fa fa-user"></i>
                                </span>
                            </div>

                            <input class="form-control" asp-for="Name" placeholder="Nome">
                            <span asp-validation-for="Name" class="text-danger">
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <div class="input-group">

                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <i class="fa fa-envelope"></i>
                                </span>
                            </div>

                            <input class="form-control" asp-for="Email" placeholder="E-mail">
                            <span asp-validation-for="Email" class="text-danger">
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="chkActive" asp-for="Active"></label>
                        <div class="input-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="Active">
                                <label class="form-check-label" for="chkActive"></label>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <a class="btn btn-danger" asp-action="Index" asp-controller="Person">Cancelar</a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
