@model PersonViewModel

<div class="col-md-4 border-right">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Cadastro Jogadores</h3>
        </div>
        <div class="card-body">

            <form role="form" asp-controller="Person" asp-action="Create" method="post">
                <div class="card-body">

                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <div class="input-group">
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <i class="fa fa-user"></i>
                                </span>
                            </div>
                            <input class="form-control" asp-for="Name" placeholder="Nome">
                            <span asp-validation-for="Name" class="text-danger">
                                <i class="icon text-danger fa fa-ban"></i>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <div class="input-group">
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <i class="fa fa-envelope"></i>
                                </span>
                            </div>
                            <input class="form-control" asp-for="Email" placeholder="E-mail">
                            <span asp-validation-for="Email" class="text-danger">
                                <i class="icon text-danger fa fa-ban"></i>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="chkActive">Configurações</label>
                        <div class="input-group">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="chkActive">
                                <label class="form-check-label" for="chkActive">Ativo</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer hide" id="btns">
                    <button type="button" class="btn btn-primary">Salvar</button>
                    <button id="btnCancel" type="button" class="btn btn-danger">Cancelar</button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}