@model IEnumerable<PersonViewModel>

<div class="col-md-8">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Jogadores</h3>
        </div>
        <div class="overlay hide" id="divCarregando">
            <i class="fa fa-refresh fa-spin"></i>
        </div>
        <!-- /.card-header -->
        <!--data-show-refresh="true"
            data-show-export="true" -->
        <div class="card-body" id="divTable">
            @{
                if (Model == null || Model.Count() == 0)
                {
                    if (Model == null)
                    {
                        <div>
                            <p><i class="icon text-danger fa fa-warning"></i> É NULO!</p>
                        </div>
                    }
                    else if (Model.Count() == 0)
                    {
                        <div>
                            <p><i class="icon text-info fa fa-warning"></i> Cadastre um jogador para fazer um teste!</p>
                        </div>
                    }
                    else
                    {

                        <div>
                            <p><i class="icon fa fa-warning"></i> Não há jogadores cadastrados!</p>
                        </div>
                    }
                }
                else
                {
                    <div>
                        <table id="tbPlayers" data-locale="pt-BR"
                               data-toolbar="#toolbar" data-toggle="table"
                               data-id-field="id" data-page-list="[10, 25, 50, 100, ALL]" data-pagination="true"
                               data-search="true"
                               data-search-align="left" data-buttons-align="right" data-toolbar-align="right"
                               data-striped="true"
                               data-single-select="true"
                               class="table table-hover" style="margin-top: 0px;  text-align: center;">
                            <thead>
                                <tr>
                                    <!-- <th data-field="state" data-checkbox="true"></th>
                                    <th data-formatter="runningFormatter">Index</th> -->
                                    <th data-field="name" data-formatter="nameFormatter" data-sortable="true" data-width="150"> @Html.DisplayNameFor(model => model.Name)</th>
                                    <th data-field="email" data-width="50" data-sortable="true"> @Html.DisplayNameFor(model => model.Email)</th>
                                    <th data-field="dtRegister" data-width="90" data-formatter="formataData" data-sortable="true"> @Html.DisplayNameFor(model => model.DtRegister)</th>
                                    <th data-field="active" data-width="70" data-sortable="true">@Html.DisplayNameFor(model => model.Active)</th>
                                    <th data-field="action" data-formatter="actionFormatter" data-events="actionEvents">Ação</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Name)</td>
                                        <td>@Html.DisplayTextFor(m => item.Email)</td>
                                        <td>@Html.DisplayFor(m => item.DtRegister)</td>
                                        <td>
                                            @if (item.Active == true)
                                            {
                                                <span class="text-success" title="Ativo">
                                                    <i class="fa fa-thumbs-o-up"></i>
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-danger" title="Inativo">
                                                    <i class="fa  fa-times"></i>
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <div style="text-align:center;">
                                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                                <a href="/Person/item.Id">
                                                    <span class="edit text-info" style="cursor: pointer; margin:10px;" title="Edit">
                                                        <i class="fa fa-edit"></i>
                                                    </span>
                                                </a>
                                                <span class="remove text-danger" style="cursor: pointer; margin:10px;" title="Remove">
                                                    <i class="fa fa-trash-o"></i>
                                                </span>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            }
        </div>
        <!-- /.card-body -->
    </div>
</div>